<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Recursos.GestionTarifas.AsignacionTarifas">
   <children>
      <Accordion>
        <panes>
          <TitledPane fx:id="tpFiltros" animated="false" text="Consulta">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox>
                           <children>
                              <HBox>
                                 <children>
                                    <Label prefWidth="100.0" text="Recurso">
                                       <HBox.margin>
                                          <Insets right="25.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ComboBox fx:id="cbRecurso" prefWidth="300.0" />
                                 </children>
                                 <padding>
                                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                 </padding>
                              </HBox>
                              <HBox alignment="TOP_RIGHT">
                                 <children>
                                    <ImageView fx:id="imBuscar" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../../imgs/iconos/buscar.png" />
                                       </image>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                    </ImageView>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="tpResultados" animated="false" text="Resultados">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox>
                           <children>
                              <HBox prefWidth="200.0">
                                 <children>
                                    <Label text="Id">
                                       <HBox.margin>
                                          <Insets left="15.0" right="50.0" />
                                       </HBox.margin>
                                       <padding>
                                          <Insets right="38.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="tID" disable="true" editable="false" />
                                 </children>
                              </HBox>
                              <HBox prefWidth="200.0">
                                 <children>
                                    <Label text="Nombre">
                                       <HBox.margin>
                                          <Insets left="15.0" right="55.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="tNombreProy" disable="true" maxWidth="700.0" prefWidth="400.0" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="10.0" top="15.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="TOP_RIGHT">
                                 <children>
                                    <ImageView fx:id="imAniadir" accessibleText="Añadir" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../../imgs/iconos/aniadir.png" />
                                       </image>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                       <HBox.margin>
                                          <Insets right="25.0" />
                                       </HBox.margin>
                                    </ImageView>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <TableView fx:id="tRelaciones" minHeight="300.0" prefHeight="500.0" prefWidth="600.0">
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="15.0" top="15.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox>
                                 <children>
                                    <ImageView fx:id="imGuardar" accessibleText="Añadir" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="iconoDisabled">
                                       <image>
                                          <Image url="@../../../../imgs/iconos/guardar.jpg" />
                                       </image>
                                       <HBox.margin>
                                          <Insets left="630.0" right="25.0" />
                                       </HBox.margin>
                                    </ImageView>
                                    <ImageView fx:id="imEliminar" accessibleText="Añadir" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="iconoDisabled">
                                       <image>
                                          <Image url="@../../../../imgs/iconos/eliminar.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="45.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
        </panes>
      </Accordion>
   </children>
</AnchorPane>
